body
	color $text-color
	font-family $font-family
	font-size 15px
	font-weight: 300

.container
	max-width 1140px
	margin 0 auto
	padding-left 15px
	padding-right 15px

.sidenav
	height: 100%; /* 100% Full-height */
	width: 0; /* 0 width - change this with JavaScript */
	position: fixed; /* Stay in place */
	z-index: 100; /* Stay on top */
	top: 0;
	left: 0;
	background-color: $yellow-color; /* Black*/
	overflow-x: hidden; /* Disable horizontal scroll */
	padding-top: 60px; /* Place content 60px from the top */
	transition: 0.5s; /* 0.5 second transition effect to slide in the sidenav */
	text-align center

	.background
		position absolute
		width 100%
		height 100%
		z-index 1
		top 0
		opacity 0.2
		background-attachment fixed

	a
		text-decoration: none;
		padding 15px 0;
		font-size: 25px;
		color: #111;
		display: block;
		transition: 0.3s
		z-index 10
		position relative

		&:hover
			color: #f1f1f1

	.closebtn
		position: absolute;
		top: 0;
		right: 25px;
		font-size: 36px;
		margin-left: 50px;

	&.active
		width 100%

	.map
		width: calc(100% - 50px);
		height: calc(100% - 115px);
		margin: 0 auto;
		border-radius: 3px;
		overflow: hidden;

	h2
		margin-bottom 15px
